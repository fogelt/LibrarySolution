@using Library.Core.Models.Items

<div class="card h-100 glass-card border-0">
  <div class="card-body">
    <div class="d-flex justify-content-between align-items-start mb-3">
      <span class="badge glass-card px-2 py-2">
        @if (Item is Book)
        {
          <i class="bi bi-book-half cursor-help" title="Book"></i>
        }
        else if (Item is DVD)
        {
          <i class="bi bi-disc cursor-help" title="DVD"></i>
        }
        else if (Item is Magazine)
        {
          <i class="bi bi-newspaper cursor-help" title="Magazine"></i>
        }
      </span>
      <div class="d-flex align-items-center gap-2">
        <span class="text-uppercase opacity-50 fw-bold" style="font-size: 0.6rem; letter-spacing: 0.1em;">
          @(Item.IsAvailable ? "Available" : "Checked Out")
        </span>
        <div class="status-indicator @(Item.IsAvailable ? "available" : "borrowed")"></div>
      </div>
    </div>

    <h5 class="card-title fw-bold">@Item.Title</h5>
    <h6 class="card-subtitle mb-3 opacity-75">@Item.Author â€¢ @Item.PublishedYear</h6>

    <div class="small opacity-50">
      @if (Item is DVD d)
      {
        <span><i class="bi bi-clock"></i> @(d.DurationInSeconds / 60) mins</span>
      }
      else if (Item is Magazine m)
      {
        <span>Issue #@m.IssueNumber</span>
      }
      else if (Item is Book b)
      {
        <span>@b.NumberOfPages Pages</span>
      }
    </div>
  </div>

  <div class="card-footer bg-transparent border-0 pb-4">
    <button class="p-2 w-100 glass-card" @onclick="HandleClick">
      See details
    </button>
  </div>
</div>

@code {
  [Parameter][EditorRequired] public LibraryItem Item { get; set; } = default!;
  [Parameter] public EventCallback<LibraryItem> OnPressed { get; set; }

  private async Task HandleClick()
  {
    if (OnPressed.HasDelegate)
    {
      await OnPressed.InvokeAsync(Item);
    }
  }
}