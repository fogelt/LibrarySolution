@using Library.Core.Models
@using Library.Web.Services
@inject LibraryService LibraryService

<div class="modal fade show d-block" tabindex="-1" style="background: rgba(0,0,0,0.6); backdrop-filter: blur(10px);">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content glass-card border-white border-opacity-10 text-white">
      <div class="modal-header border-0">
        <h5 class="modal-title fw-bold text-uppercase" style="letter-spacing: 0.1em;">Add New Member</h5>
        <button type="button" class="btn-close btn-close-white shadow-none" @onclick="OnClose"></button>
      </div>

      <EditForm Model="@newMember" OnValidSubmit="HandleSubmit">
        <DataAnnotationsValidator />

        <div class="modal-body py-3">
          <div class="mb-3">
            <label class="form-label opacity-75 small uppercase fw-bold">Full Name</label>
            <InputText @bind-Value="newMember.Name" class="form-control glass-input" placeholder="John Doe" />
            <ValidationMessage For="@(() => newMember.Name)" class="text-danger small" />
          </div>

          <div class="mb-3">
            <label class="form-label opacity-75 small uppercase fw-bold">Email Address</label>
            <InputText @bind-Value="newMember.Email" class="form-control glass-input" placeholder="john@example.com" />
            <ValidationMessage For="@(() => newMember.Email)" class="text-danger small" />
          </div>

        </div>

        <div class="modal-footer border-0">
          <button type="submit"
                  class="btn btn-sm glass-card text-white px-4 py-2 border-white border-opacity-10 shadow-sm">Create
            Member</button>
          </div>
        </EditForm>
      </div>
    </div>
  </div>

@code {
  [Parameter] public EventCallback OnClose { get; set; }
  [Parameter] public EventCallback OnMemberAdded { get; set; }

  private Member newMember = new Member(
      Guid.NewGuid().ToString().Substring(0, 8).ToUpper(),
      name: "",
      email: "",
      DateTime.Now,
      activeScore: 0
  );

  private async Task HandleSubmit()
  {
    await LibraryService.AddMemberAsync(newMember);
    await OnMemberAdded.InvokeAsync();
    await OnClose.InvokeAsync();
  }
}