@rendermode InteractiveServer
@page "/"
@using Library.Core.Models.Items
@using Library.Web.Services
@inject LibraryService LibraryService

<PageTitle>Library Home</PageTitle>

<div class="row g-4 mb-5">
  @foreach (var stat in new[] {
    (stats.Total.ToString(), "Total Items"),
    (stats.Loaned.ToString(), "On Loan"),
    (stats.MVP, "Top Member")
})
  {
    <div class="col-md-4">
      <div class="card glass-card p-4 text-center">
        <h2 class="fw-bold mb-0">@stat.Item1</h2>
        <small class="text-uppercase opacity-75">@stat.Item2</small>
      </div>
    </div>
  }
</div>

@code {
  private (int Total, int Loaned, string MVP) stats;
  protected override async Task OnInitializedAsync()
  {
    await LoadData();
  }
  private async Task LoadData()
  {
    stats = await LibraryService.GetStatisticsAsync();
  }
}